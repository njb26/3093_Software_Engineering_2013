<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:context=".MainActivity" >

        <ImageButton
            android:id="@+id/imgButton_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:contentDescription="@string/camera_button_description"
            android:scaleType="fitCenter"
            android:background="@drawable/cam_button_selector"/>

        <ImageButton
            android:contentDescription="@string/selection_button_description"
            android:id="@+id/imgButton_grab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/gallery_button_selector" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/title" />

</RelativeLayout>
